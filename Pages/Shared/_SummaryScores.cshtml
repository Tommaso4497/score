@inject IAuthorizationService AuthorizationService
@using ScoreUp.Costant
@using Microsoft.AspNetCore.Authorization
@using ScoreUp.Core

@model ScoreInfo


<div style="padding-top: 20px; ">
    <div class="card">
        <div class="card-header">
            <h3>Punteggio: @Model.Score_Point</h3>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">

                <li class="list-group-item">Nome Giocatore: @Model.UserInfo.PlayerName</li>
                <li class="list-group-item">Cognome Giocatore: @Model.UserInfo.PlayerSurname</li>
                <li class="list-group-item">Età: @Model.UserInfo.Age</li>
                <li class="list-group-item">Gioco: @Model.GameInfo.Title</li>
            </ul>
        </div>
        <div class="card-footer">
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Operations.Delete)).Result.Succeeded)
            {
                <a class="btn btn-danger"
                   asp-page="./DeleteScore"
                   asp-route-id="@Model.Id"> Elimina </a>
            }
        </div>
    </div>
</div>

