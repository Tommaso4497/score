@page "{id:int}"
@model ScoreUp.Pages.Game.DetailGameModel

@{ ViewData["Title"] = "Dettagli Videogioco";
}

@if (Model.Message != null)
{
    <div class="alert-info">@Model.Message</div>
}


<div style="padding-top: 20px; ">
    <div class="card">
        <div class="card-header">
            <h3>Gioco: @Model.GameInfo.Title</h3>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush"> 
                <li class="list-group-item">Genere: @Model.GameInfo.Genre</li>
          
                <li class="list-group-item">Id: @Model.GameInfo.Id</li>
            </ul>
        </div>
        <div class="card-footer">
            <a class="btn btn-outline-primary"
               asp-page="./ListGame"> Torna indietro </a>

        </div>
    </div>
</div>


