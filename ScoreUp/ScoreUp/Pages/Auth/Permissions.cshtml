@page  
@model ScoreUp.Pages.Auth.PermissionsModel
@{
}
<h1>Permessi</h1>
<br />
<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="permission" method="post" asp-action="update"  class="d-inline">
      
            <input asp-for="@Model.Permissions.RoleId" type="hidden" />
            <table class="table table-striped" id="permissionTable">
                <thead>
                    <tr>
                        <th>
                            Tipo
                        </th>
                        <th>
                            Permessi
                        </th>
                        <th>
                            Stato
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.Permissions.RoleClaims.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.Permissions.RoleClaims[i].Type" type="hidden" />
                                Autorizzazione
                            </td>
                            <td>
                                <input asp-for="@Model.Permissions.RoleClaims[i].Value" type="hidden" />
                                @Html.DisplayForModel()
                                @Model.Permissions.RoleClaims[i].Value
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.Permissions.RoleClaims[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Salva
                </button>
                <a class="btn btn-danger"
                   asp-page="./Roles"> Torna indietro </a>
            </div>
        </form>
    </div>
</div>
